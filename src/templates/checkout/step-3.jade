          .step__payment__block.step__payment__block--1
            input.checkbox#payment-2(type="radio" name="payment" data-payment="Наличными курьеру при получении" value="Наличными курьеру при получении")
            label.label(for="payment-2")
            label.label-for(for="payment-2")
