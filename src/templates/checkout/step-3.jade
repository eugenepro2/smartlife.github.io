          //-       span 500 
          //-       | рублей
          //-     p.hidden-sm Краткий текст о доставке "СДЭК"
          .delivery-3
            input#delivery-3(type="radio" name="delivery" data-delivery="Доставка почтой по России" data-delivery-price="500" value="Доставка почтой по России")
            label(for="delivery-3")
              .step__delivery__check
              +icon('delivery-2')
              div
                h4 Почтой России 
                p Стоимость доставки - 
                  span 500 
                  | рублей
                p Краткий текст о доставке "Почта России"
